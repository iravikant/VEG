<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <androidx.cardview.widget.CardView
        android:layout_width="260dp"
        android:layout_height="140dp"
        app:cardCornerRadius="6dp"
        android:layout_margin="5dp"
        android:background="@drawable/orderimage"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/orderimage"
            android:orientation="vertical">





                <TextView
                    android:id="@+id/txt_product"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:background="@drawable/orderrect"
                    android:text="Order Now"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="76dp"
                app:cardCornerRadius="6dp"
                android:backgroundTint="@color/white"
                android:layout_marginStart="40dp"
                android:layout_alignParentBottom="true"
                app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:ellipsize="end"
        android:text="25% OFF"
        android:textColor="#F55D2C"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/txt_price"
        android:layout_below="@+id/txt_product"
        android:text="Welcome offer on 1st order"
        android:textColor="#757575"
        android:textSize="10sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:ellipsize="end"
        android:text="Save 25% on your first order"
        android:textColor="#757575"
        android:textSize="8sp"
        android:textStyle="bold" />







</LinearLayout>












            </androidx.cardview.widget.CardView>
















        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>